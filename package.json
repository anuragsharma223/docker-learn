{
  "name": "week-27-todo-app",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:migrate":"cd packages/db && bunx prisma generate",
    "start:backend":"cd apps/backend && bun run start",
    "start:websocket":"cd apps/websocket && bun run start",
    "start:frontend":"cd apps/web && bun run dev"

  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.2",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.10",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
